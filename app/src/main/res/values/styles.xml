<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="actionOverflowMenuStyle">@style/CMOptionsMenu</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="fontFamily">@string/default_font</item> <!-- can't type sans-serif-medium directly because android 7 crashes on Toast -->
    </style>

    <style name="BaseEditText">
        <item name="android:ems">13</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="UneditableEditText" parent="BaseEditText">
        <item name="android:inputType">none</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="tabAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CMOptionsMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/popup_menu</item>
    </style>

</resources>